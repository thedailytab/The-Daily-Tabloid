name: Update The Daily Tabloid

on:
  schedule:
    - cron: '0 */6 * * *'  # Robot wakes up every 6 hours
  workflow_dispatch:       # You can wake it manually

permissions:
  contents: write

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Get the box ready
        uses: actions/checkout@v4

      - name: Get Python ready
        uses: actions/setup-python@v4
        with:
          python-version: '3.11'

      - name: Get the requests toy
        run: pip install requests

      - name: Make the funny newspaper
        run: python generate.py

      - name: Put the newspaper on the internet
        uses: peaceiris/actions-gh-pages@v4
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: .  # Uses everything your script makes
          force_orphan: true          publish_dir: .            # Deploys everything in root (index.html + articles folder)
          force_orphan: true        # Keeps history clean
          user_name: 'github-actions[bot]'
          user_email: 'github-actions[bot]@users.noreply.github.com'
